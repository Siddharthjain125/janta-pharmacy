# =============================================================================
# Janta Pharmacy Backend - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values.
# Never commit .env to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL connection string for Prisma
# Local development (with docker-compose):
DATABASE_URL="postgresql://janta:janta_dev_password@localhost:5432/janta_pharmacy?schema=public"

# Production example (update with real credentials):
# DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# -----------------------------------------------------------------------------
# Repository Strategy
# -----------------------------------------------------------------------------
# Set to 'prisma' to use PostgreSQL, 'memory' for in-memory (tests/dev)
# Default: 'memory' if DATABASE_URL is not set, 'prisma' if DATABASE_URL is set
REPOSITORY_TYPE=prisma

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3001

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
# Secret key for signing JWT tokens (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m

# Refresh token configuration
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Bcrypt rounds for password hashing (10-12 recommended)
BCRYPT_ROUNDS=10

# CORS configuration
CORS_ORIGIN=http://localhost:3000

